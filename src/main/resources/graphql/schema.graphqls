type Book {
    id: ID!
    title: String!
    pageCount: Int!
    author: Author
}

type Author {
    id: ID!
    name: String!
    country: String!
}

type Query {
    bookById(id: ID!): Book
    books: [Book]
}

type Mutation {
    createBook(title: String!
               pageCount: Int!
               authorId: Int!): Book!
    updateBook(id: ID!,
               title: String!
               pageCount: Int!
               authorId: Int!): Book!
    deleteBook(id: ID!): Boolean!
}